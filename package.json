{
  "name": "@ui-collection-kit",
  "private": true,
  "author": "Peter Jaber",
  "license": "MIT",
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "packages": "pnpm --filter=./packages/** -r",
    "build": "pnpm packages -- build",
    "postbuild": "pnpm document-types && pnpm document-attr",
    "sync-pkgs": "tsx scripts/sync-packages.ts",
    "clean-pkgs": "pnpm -r exec rm -rf dist .swc *.log",
    "clean": "pnpm clean-pkgs && rm -rf node_modules",
    "nextjs-demo": "pnpm --filter \"./demos/nextjs-demo\"",
    "start-nextjs-demo": "pnpm nextjsdemo dev",
    "unstyled-react": "pnpm --filter \"./packages/unstyled/react\"",
    "start-unstyled-react": "pnpm unstyled-react storybook",
    "generate-machine": "plop machine && pnpm sync-pkgs",
    "generate-util": "plop utility && pnpm sync-pkgs",
    "typecheck": "pnpm packages -- typecheck",
    "prettier": "prettier --check packages/**/*",
    "prettier-fix": "prettier --write packages/**/*",
    "lint": "eslint packages",
    "document-types": "tsx scripts/typedocs.ts",
    "document-attr": "tsx scripts/data-attr.ts"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "prettier --write"
  },
  "dependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@swc/core": "1.11.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "22.14.1",
    "@types/signale": "1.4.7",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.5.0",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.6",
    "fast-glob": "3.3.3",
    "find-packages": "10.0.4",
    "node-fetch": "3.3.2",
    "prettier": "3.5.3",
    "prettier-plugin-svelte": "3.3.3",
    "scule": "1.3.0",
    "signale": "1.4.0",
    "ts-morph": "25.0.1",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "vercel-submodules": "1.0.10",
    "vite": "6.3.0",
    "vite-plugin-dts": "4.5.3",
    "vitest": "3.1.1"
  },
  "devDependencies": {
    "storybook": "8.6.12",
    "@storybook/addon-a11y": "8.6.12",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@types/react": ">=18.3.1",
    "@types/react-dom": ">=18.3.1",
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.8.1"
}
