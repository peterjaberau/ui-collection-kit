{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "paths": {
      "#assets/*": ["./src/assets/*"],
      "#auth/*": ["./src/auth/*"],
      "#charts/*": ["./src/charts/*"],
      "#core/*": ["./src/core/*"],
      "#date-picker/*": ["./src/date-picker/*"],
      "#forms/*": ["./src/forms/*"],
      "#hooks/*": ["./src/hooks/*"],
      "#modals/*": ["./src/modals/*"],
      "#modals-provider/*": ["./src/modals-provider/*"],
      "#nprogress/*": ["./src/nprogress/*"],
      "#react/*": ["./src/react/*"],
      "#use-hotkeys/*": ["./src/use-hotkeys/*"],
      "@/*": ["./src/*"],
      "@/": ["./src"]
    },
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
